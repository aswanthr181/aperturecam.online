    </nav>
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">

                    <div class="row tm-edit-product-row">
                        <div class="col-xl-6 col-lg-6 col-md-12">
                            <form onsubmit="return validateform()"
                                action="/admin/updatecategory?id=<%= c_details._id %>" class="tm-edit-product-form"
                                method="post">
                                <div class="form-group mb-3">
                                    <label for="name">Category Name
                                    </label>
                                    <input id="category" name="category" type="text" class="form-control validate"
                                        value="<%= c_details.category %>"  />
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-block text-uppercase">Update
                                        category Now</button>
                                </div>
                            </form>
                            <div style="text-align: center;">
                                <% if(sweetalert=="exist" ){ %>
                                    <script>
                                        swal({
                                               title: "ALREADY EXIST",
                                                text: "try another",
                                                 imageUrl: 'thumbs-up.jpg'
                                             });
                                        
                                    </script>
                                    <% } else if(sweetalert=="success") {%>
                                    <script>
                                        swal({
                                               title: "ITEM ADDED",
                                                text: "SUCCESS",
                                                 imageUrl: 'thumbs-up.jpg'
                                             });
                                        
                                    </script>
                                    <% } %>
                            </div>

                            <div style="text-align: center;">
                                <% if(typeof message !=='undefined' ){ %>
                                    <p style="color:rgb(255, 0, 0);">
                                        <%=message %>
                                    </p>
                                    <% } %>
                            </div>
                        </div>
                        <div class="col-6"><br><br>
                            <a href="/admin/categorylist"><button
                                    class="btn btn-primary btn-block text-uppercase">Category
                                    List</button></a>
                        </div>
                    </div>
                </div>
            </div>



            <%- include('../adminLayout/a_footer.ejs') %>

                <script>

                    function validateform() {
                        var category1 = document.getElementById("category").value;


                        if (category1=='') {
                            swal({
                                icon: 'error',
                                title: 'oops..',
                                text: 'please fill the details',

                            });
                            return false;
                        }
                        return true;
                    }

                
                </script>