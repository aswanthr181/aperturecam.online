    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
                <div class="tm-bg-primary-dark tm-block tm-block-product-categories">
                    <div class="row">

                        <div class="col-12 text-center">
                            <h2 class="tm-block-title mb-3"> Coupon</h2>
                        </div>
                        <div class="col-4"><br>
                            <a href="/admin/addcoupon"><button class="btn btn-primary btn-block text-uppercase">ADD NEW
                                </button></a>
                        </div>
                    </div>
                    <div class="tm-product-table-container">
                        <table class="table tm-table-small tm-product-table">
                            <thead>
                                <tr class="text-center">

                                    <th scope="col">coupon Code</th>
                                    <th scope="col">Expiry Date</th>
                                    <th scope="col">Min Purchase</th>
                                    <th scope="col">Max purchase</th>
                                    <th scope="col">discount</th>
                                    <th scope="col">max-discount amount</th>

                                    <th scope="col">Action</th>

                                </tr>
                            </thead>
                            <tbody>


                                <% for(let i=0;i<coupon.length;i++) {%>
                                    <tr class="text-center">

                                        <td class="">
                                            <%=coupon[i].couponId %>
                                        </td>
                                        <td class="">
                                            <%=coupon[i].expiryDate %>
                                        </td>
                                        <td class="">₹<%=coupon[i].minAmount %>
                                        </td>
                                        <td class="">₹<%=coupon[i].maxAmount %>
                                        </td>
                                        <td class="">
                                            <%=coupon[i].discount %>%
                                        </td>
                                        <td class="">₹<%=coupon[i].max_discount %>
                                        </td>

                                        <td>
                                            <a href="/admin/editcoupon?id=<%= coupon[i]._id%>"
                                                class="tm-product-delete-link">
                                                <i
                                                    class="fa-sharp fa-solid fa-pen-to-square tm-product-delete-icon"></i>
                                            </a>
                                            <a href="/admin/delete/coupon?id=<%= coupon[i]._id%>" id="del"
                                                class="tm-product-delete-link">
                                                <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                            </a>

                                        </td>
                                    </tr>
                                    <% } %>






                            </tbody>
                        </table>
                        <% if (message !=null) { %>
                            <% if(message=="coupon addedd success" ){ %>
                                <script>

                                    swal({
                                        title: "success!",
                                        text: " <%= message %> ",
                                        icon: "",
                                        timer: 2000,
                                        showConfirmButton: false
                                    })
                                </script>
                                <% }else if(message=="coupon updated success"){ %>
                                <script>
                                     swal({
                                        title: "success!",
                                        text: " <%= message %> ",
                                        icon: "",
                                        timer: 2000,
                                        showConfirmButton: false
                                    })
                                </script>
                                <% }else{ %>
                                    <script>
                                        swal({
                                            title: "Warning!",
                                            text: " <%= message %> ",
                                            icon: "warning",
                                            timer: 9000,
                                            showConfirmButton: true
                                        })
                                    </script>
                                    <% } %>
