<%- include ('../layouts/header.ejs') %>
  <section class="h-100" style="background-color: #ffffff;">
    <div class="container-lg h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px; background-color: #252424;">
            <div class="card-body p-md-5">
              <div class="row d-flex justify-content-center align-items-center">



                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                  <p id="heading" class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                  <p style="size: 10px; font-style: poppins;text-align: center;color: white;">Please enter your details
                    below</p>

                  <form class="mx-1 mx-md-4" action="/signup" method="post">
                    <div class="d-flex flex-row align-items-center mb-4">
                      <!-- <i class="fas fa-user fa-lg me-3 fa-fw"></i> -->
                      <div class="form-outline flex-fill mb-0">

                        <input placeholder="Name" type="text" id="inputfield" class="form-control" name="name" />

                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <!-- <i class="fas fa-envelope fa-lg me-3 fa-fw"></i> -->
                      <div class="form-outline flex-fill mb-0">

                        <input placeholder="Email" type="email" id="inputfield" class="form-control" name="email" />

                      </div>
                    </div>



                    <div class="d-flex flex-row align-items-center mb-4">
                      <!-- <i class="fas fa-envelope fa-lg me-3 fa-fw"></i> -->
                      <div class="form-outline flex-fill mb-0">

                        <input placeholder="Mobile Number" type="number" id="inputfield" class="form-control"
                          name="mobile" />

                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <!-- <i class="fas fa-lock fa-lg me-3 fa-fw"></i> -->
                      <div class="form-outline flex-fill mb-0">

                        <input placeholder="Password" type="password" id="inputfield" class="form-control"
                          name="password"
                          title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                          required />

                      </div>
                    </div>

                    <div class="form-outline flex-fill mb-0">

                      <input placeholder="Re-enter password" type="password" id="inputfield" class="form-control"
                        name="repassword" />

                    </div>

                    <br>

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit" class="btn btn-primary btn-lg"
                        style="border-radius: 27px; background-color: black;color: white;border: none; width: 133px; height: 55px;">Register</button>
                    </div>



                  </form>

                  <!-- registration sucessfull -->
                  <div style="text-align: center;">
                    <% if(typeof message !=='undefined' ){ %>
                      <p style="color:rgb(255, 0, 0);">
                        <%=message %>
                      </p>
                      <% } %>
                  </div>

                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <%- include ('../layouts/footer.ejs') %>